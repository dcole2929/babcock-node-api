{
    "name": "babcock-node-api",
    "description": "Node API boilerplate complete with swagger and auth",
    "version": "0.0.1",
    "main": "index.js",
    "license": "UNLICENSED",
    "scripts": {
        "start": "npm run build && node dist",
        "dev": "nodemon src/index.js --exec babel-node",
        "build": "babel src -d dist --copy-files --source-maps inline",
        "precommit": "lint-staged",
        "cz": "git-cz",
        "stylelint": "prettier --list-different .",
        "stylelint:js": "prettier --list-different \"**/**.js\"",
        "lint": "eslint . ",
        "lint:js": "eslint --cache \"**/**.js\"",
        "fix": "npm run lint -- --fix && npm run stylelint -- --write",
        "fix:js": "npm run lint:js -- --fix",
        "check": "flow check",
        "test": "jest --testEnvironment=node"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run fix:js",
            "git add --force"
        ],
        "*.{js,json,css,scss,md}": [
            "prettier --write --list-different",
            "git add --force"
        ]
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "_moduleAliases": {
        "~": "."
    },
    "dependencies": {
        "await-to-js": "^2.1.1",
        "bcrypt": "^5.0.0",
        "bluebird": "^3.7.0",
        "body-parser": "^1.19.0",
        "commitizen": "^4.1.2",
        "cookie-parser": "^1.4.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-openapi-validator": "^3.10.0",
        "js-yaml": "^3.13.1",
        "jsonwebtoken": "^8.5.1",
        "knex": "^2.4.0",
        "module-alias": "^2.2.2",
        "objection": "^2.2.1",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "pg": "^8.3.0",
        "swagger-jsdoc": "^4.0.0",
        "swagger-ui-express": "^4.1.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-conventional": "^9.1.1",
        "babel-cli": "^6.26.0",
        "babel-eslint": "^10.0.3",
        "babel-jest": "^26.1.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-export-extensions": "^6.22.0",
        "babel-plugin-transform-flow-strip-types": "^6.22.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.7.0",
        "cz-conventional-changelog": "^3.2.0",
        "eslint": "^7.4.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-flowtype": "^5.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.2",
        "prettier": "^2.0.5"
    }
}
